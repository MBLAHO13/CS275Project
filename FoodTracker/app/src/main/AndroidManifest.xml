<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cblaho.foodtracker" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".FoodTracker"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RecipeList"
            android:label="@string/title_activity_recipe_list" >
        </activity>
        <activity
            android:name=".RecipeDisplayOne"
            android:label="@string/title_activity_recipe_view" >
        </activity>
        <activity
            android:name=".AddIngredient"
            android:label="@string/title_activity_recipe_add" >
        </activity>
        <activity
            android:name=".SearchResults"
            android:label="@string/title_activity_recipe_add_search_results" >
        </activity>
        <activity
            android:name=".AddUnitsQuantity"
            android:label="@string/title_activity_add_units_quantity" >
        </activity>
        <activity
            android:name=".RecipeSteps"
            android:label="@string/title_activity_recipe_steps" >
        </activity>
    </application>

</manifest>
