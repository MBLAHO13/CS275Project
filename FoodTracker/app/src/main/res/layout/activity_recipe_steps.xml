<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cblaho.foodtracker.activities.RecipeSteps">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recipe_steps_name"
        android:ems="10"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:hint="Recipe Name"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:id="@+id/recipe_steps_servings"
        android:ems="10"
        android:textSize="30sp"
        android:hint="Servings"
        android:layout_below="@+id/recipe_steps_name"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:textSize="30sp"
        android:ems="10"
        android:id="@+id/recipe_steps_steps"
        android:hint="Steps"
        android:minLines="1"
        android:layout_below="@+id/recipe_steps_servings"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Finish"
        android:id="@+id/button_finish_recipe"
        android:textSize="30sp"
        android:onClick="onFinish"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
