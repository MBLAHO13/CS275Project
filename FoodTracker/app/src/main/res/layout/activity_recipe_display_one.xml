<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cblaho.foodtracker.RecipeDisplayOne">

    <TextView android:text="hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recipe_display_one_name"
        android:textAllCaps="true"
        android:textSize="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Servings:"
        android:id="@+id/servingstext"
        android:textSize="20dp"
        android:layout_below="@+id/recipe_display_one_name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="20dp"
        android:layout_below="@+id/recipe_display_one_name"
        android:layout_toEndOf="@+id/servingstext"/>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/IngredientList"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/servingstext" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nutrition Data: "
        android:textSize="20dp"
        android:id="@+id/nutritionlabel"
        android:layout_below="@+id/IngredientList"
       />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/NutrientList"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/nutritionlabel" />


</RelativeLayout>
